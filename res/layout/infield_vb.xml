<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_03"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.manhica.verbalautopsy.activity.InFieldVerbalAutopsyActivity" >

    <EditText
        android:id="@+id/roundTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero da ronda"
        android:inputType="number"
        android:digits="123456789"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#111" />

    <EditText
        android:id="@+id/houseNumberTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Numero da casa"
        android:inputType="textFilter|number"
        android:digits="0123456789-"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#111" />

    <EditText
        android:id="@+id/permIdTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Perm ID"
        android:inputType="textFilter|number"
        android:digits="0123456789-"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#111" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center" >

        <RadioButton
            android:id="@+id/radioAVMaterna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Autopsia Verbal Materna" />

        <RadioButton
            android:id="@+id/radioAVNeonato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autopsia Verbal Neonato" />

    </RadioGroup>
    
    <Button
        android:id="@+id/executeAV_btn"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/keybutton_2"
        android:text="Preencher Formulario"
        android:textStyle="bold"
        android:textColor="#444"/>

</LinearLayout>
